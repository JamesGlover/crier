source 'https://rubygems.org'

# Sinatra provides the basic web framework
gem 'sinatra'

# Sinatra-contrib provides respond_with, which allows more elegant handling of different
# accept content-types
gem 'sinatra-contrib'

# Puma provides the server
gem 'puma'

# Asset Pipeline
gem "bootstrap-sass"
gem "sinatra-assetpack"

# Provides friendly duration messages (3 seconds ago; 4 days ago)

gem 'chronic_duration'

group :test do
  # Rsepc drives the test suite
  gem "rspec"
end

group :development do
  # Pry is a powerful irb alternative
  gem 'pry'
  # Rake provides useful command line tools
  gem 'rake'
end
